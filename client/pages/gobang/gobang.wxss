/* pages/gobang/gobang.wxss */
.view-gobang .game-title{
  font-size: 48rpx;
  padding: 10rpx;
}
.view-gobang .chess-wrapper{
  position: relative;
  margin: 10rpx auto;
  /* box-shadow: 0 0 1px #000 inset; */
}
.view-gobang .chess-grid-col {
  position: relative;
  /* box-shadow: 0 0 1px #000 inset; */
}
.chess-grid-col .grid-row{
  position: absolute;
  left: 0;
  right: 0;
  border-top: 1px solid #ccc;
  top: 50%;
}
.chess-grid-col .grid-col {
  position: absolute;
  top: 0;
  bottom: 0;
  border-left: 1px solid #ccc;
  left: 50%;
}
.chess-wrapper .dialog-success {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.7);
  font-size: 36px;
  color: #fff;
  z-index: 1;
}
.chess-grid-col.chesser1::before{
  position: relative;
  display: inline-block;
  content: '';
  width: 80%;
  height: 80%;
  margin-left: 10%;
  margin-top: 10%;
  border-radius: 50%;
  background-color: green;
  z-index: 1;
}
.chess-grid-col.chesser2::before{
  position: relative;
  display: inline-block;
  content: '';
  width: 80%;
  height: 80%;
  margin-left: 10%;
  margin-top: 10%;
  border-radius: 50%;
  background-color: red;
  z-index: 1;
}
.game-operate{
  margin: 20rpx auto;
}
.view-gobang .reset-game {
  background-color: #d81e06;
}
.view-gobang .reset-game-home {
  background-color: #d81e06;
}