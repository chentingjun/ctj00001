/* pages/gobang/gobang.wxss */
.view-gobang .game-title{
  font-size: 48rpx;
  padding: 10rpx;
}
.view-gobang .chess-wrapper{
  position: relative;
  margin: 10rpx auto;
  box-shadow: 0 0 1px #000 inset;
}
.view-gobang .chess-grid-col {
  box-shadow: 0 0 1px #000 inset;
}
.chess-wrapper .dialog-success {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.7);
  font-size: 36px;
  color: #fff;
}
.chess-grid-col.chesser1{
  background-color: green;
}
.chess-grid-col.chesser2 {
  background-color: red;
}
.game-operate{
  margin: 20rpx auto;
}
.view-gobang .reset-game {
  background-color: #d81e06;
}
.view-gobang .reset-game-home {
  background-color: #d81e06;
}